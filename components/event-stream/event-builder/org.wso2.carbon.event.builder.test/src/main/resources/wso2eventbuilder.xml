<eventBuilder name="wso2eventbuilder" xmlns="http://wso2.org/carbon/eventbuilder">
    <from eventAdaptorType="wso2eventadaptor" eventAdaptorName="wso2eventadaptor">
        <property name="streamName">analytics_Statistics</property>
        <property name="version">1.3.0</property>
    </from>
    <mapping endpointType="wso2event">
        <property>
            <from name="ipAdd" endpointType="metadata"/>
            <to name="ipAddress" endpointType="string"/>
        </property>
        <property>
            <from name="userID" endpointType="payload"/>
            <to name="user" endpointType="string"/>
        </property>
        <property>
            <from name="searchTerms" endpointType="payload"/>
            <to name="keywords" endpointType="string"/>
        </property>
    </mapping>
    <to streamName="summarizedStatistics" version="1.0.0"/>
</eventBuilder>
